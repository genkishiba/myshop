<%= form_with(model: shop) do |form| %>
<div>
  <%= form.label :name %>
  <%= form.text_field :name %>
</div>
<div>
  <%= form.label :address %>
  <%= form.text_field :address %>
</div>
<div>
  <%= form.label :tel %>
  <%= form.text_field :tel %>
</div>
<div>
  <%= form.label :introduce %>
  <%= form.text_area :introduce %>
</div>
<%= form.submit %>  
<% end %>